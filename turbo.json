{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "NODE_ENV",
    "APP_PORT",
    "PORT",
    "WS_PORT",
    "SERVER_PORT",
    "EXPRESS_PORT",
    "BRIDGE_PORT",
    "NEXT_PUBLIC_APP_VERSION",
    "NEXT_PUBLIC_APP_URL",
    "NEXT_PUBLIC_WS_URL",
    "NEXT_PUBLIC_SERVER_URL",
    "NEXT_PUBLIC_BRIDGE_URL",
    "NEXTAUTH_SECRET",
    "NEXTAUTH_URL",
    "NEXTAUTH_URL_INTERNAL",
    "DATABASE_URL",
    "REDIS_URL",
    "NEXT_PUBLIC_DISABLE_SIGN_IN",
    "NEXT_PUBLIC_DISABLE_SIGN_UP"
  ],
  "tasks": {
    "lint": {
      "cache": false
    },
    "lint:fix": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "dependsOn": [
        "//#dev:env-check"
      ],
      "persistent": true
    },
    "//#dev:env-check": {
      "cache": false,
      "inputs": [
        "./.env.example",
        "./.env.development.local"
      ],
      "outputs": [
        "./.env.development.local"
      ]
    },
    "//#build:env-check": {
      "cache": false,
      "inputs": [
        "./.env.example",
        "./.env.production.local"
      ],
      "outputs": [
        "./.env.production.local"
      ]
    },
    "@what-if-store/prisma#dev": {
      "cache": false,
      "dependsOn": [
        "//#dev:env-check"
      ]
    },
    "@what-if-store/server#dev": {
      "cache": false,
      "dependsOn": [
        "//#dev:env-check"
      ]
    },
    "@what-if-store/web#dev": {
      "cache": false,
      "dependsOn": [
        "//#dev:env-check"
      ]
    }
  }
}
