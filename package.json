{
  "name": "what-if-store",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "dev": "dotenv -e .env.development.local -- turbo run dev",
    "dev:env-check": "dotenv-checker --schema .env.example --env .env.development.local",
    "dev:db": "dotenv -e .env.development.local -- turbo run dev --filter=\"@what-if-store/prisma\"",
    "dev:web": "dotenv -e .env.development.local -- turbo run dev --filter=\"@what-if-store/server\"  --filter=\"@what-if-store/web\"",
    "dev:bridge": "dotenv -e .env.development.local -- turbo run dev --filter=\"@what-if-store/bridge\"",
    "build": "dotenv -e .env.production.local -- turbo run build",
    "build:env-check": "dotenv-checker --schema .env.example --env .env.production.local",
    "prepare": "husky"
  },
  "resolutions": {
    "@blocknote/core": "0.13.4",
    "@blocknote/mantine": "0.13.4",
    "@blocknote/react": "0.13.4",
    "@faker-js/faker": "8.4.1",
    "@prisma/client": "5.13.0",
    "@trpc/client": "11.0.0-rc.374",
    "@trpc/next": "11.0.0-rc.374",
    "@trpc/react-query": "11.0.0-rc.374",
    "@trpc/server": "11.0.0-rc.374",
    "@types/node": "20.12.12",
    "@types/react": "18.3.2",
    "@types/react-dom": "18.3.0",
    "countries-list": "3.1.0",
    "prisma": "5.13.0",
    "react": "18.3.1",
    "react-dom": "18.3.1"
  },
  "devDependencies": {
    "@commitlint/cli": "19.3.0",
    "@commitlint/config-conventional": "19.2.2",
    "@ianvs/prettier-plugin-sort-imports": "4.2.1",
    "@what-if-store/bridge": "workspace:*",
    "@what-if-store/config": "workspace:*",
    "@what-if-store/constants": "workspace:*",
    "@what-if-store/electron": "workspace:*",
    "@what-if-store/prisma": "workspace:*",
    "@what-if-store/server": "workspace:*",
    "@what-if-store/tsconfig": "workspace:*",
    "@what-if-store/types": "workspace:*",
    "@what-if-store/utils": "workspace:*",
    "dotenv-checker": "1.1.5",
    "dotenv-cli": "7.4.2",
    "eslint": "^8.57.0",
    "husky": "9.0.11",
    "npm-run-all": "4.1.5",
    "prettier": "3.2.5",
    "tsx": "4.10.2",
    "turbo": "2.0.4",
    "typescript": "5.4.5"
  },
  "packageManager": "pnpm@8.15.6",
  "engines": {
    "node": ">=20.11.1",
    "pnpm": "8.15.6"
  }
}
